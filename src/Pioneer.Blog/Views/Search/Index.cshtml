@{
    Layout = "~/Views/Shared/ArchivePost/_Template.cshtml";
}

@using System
@using System.Collections.Generic
@using Microsoft.AspNetCore.Mvc.Rendering

@model List<Post>
<div class="hero-gradient hg-small" style="background-image: url(/images/hero-archive-post.jpg)">
  <div class="row hero-gradient-content">
    <div class="large-12 columns">
      <h1>@ViewBag.Header</h1>
      <div class="bar"></div>
    </div>
  </div>
</div>
<section class="search">
  <div class="row">
    <div class="large-8 columns">
      @if (Model.Count == 0)
      {
          @Html.Partial("_SearchEmptyState")
      }
      else
      {
          @Html.Partial("_SearchMeta", (int)ViewBag.TotalQueryMatches)
          @Html.Partial("ArchivePost/_ArchivePost", Model)
          <pioneer-pagination info="@ViewBag.PaginatedMeta" route="/search/@Uri.EscapeUriString(ViewBag.Query)"></pioneer-pagination>
      }
    </div>
    <aside class="large-4 columns">
      <div class="hide-for-small-only">
        @Html.Partial("ArchivePost/_SidebarTitle", "Tin Tức Phổ Biến")
        @Html.Partial("ArchivePost/_SidebarPopularPosts", (List<Post>)ViewBag.PopularPosts)
      </div>
      <div class="hide-for-small-only">
        @Html.Partial("ArchivePost/_SidebarTitle", "Tin Mới")
        @Html.Partial("ArchivePost/_SidebarNewPosts", (List<Post>)ViewBag.NewPosts)
      </div>
      @if (Model.Count != 0)
      {
          <div class="hide-for-small-only">
            @Html.Partial("ArchivePost/_SidebarTitle", "Tìm Kiếm!")
            <section class="sidebar">
              @Html.Partial("_SearchBar")
            </section>
          </div>
      }
      <div class="follow-us-on hide-for-small-only">
        @Html.Partial("ArchivePost/_SidebarTitle", "Theo dõi tôi @!")
        @Html.Partial("ArchivePost/_SidebarFollowUs")
      </div>
      <div class="hide-for-small-only">
        @Html.Partial("ArchivePost/_SidebarTitle", "Thẻ")
        @Html.Partial("ArchivePost/_SidebarTags", (List<Tag>)ViewBag.Tags)
      </div>
      <div class="hide-for-small-only">
        @Html.Partial("ArchivePost/_SidebarTitle", "Loại")
        @Html.Partial("ArchivePost/_SidebarCategories", (List<Category>)ViewBag.Categories) 
      </div>
    </aside>
  </div>
</section>

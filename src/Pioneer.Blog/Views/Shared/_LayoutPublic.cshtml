@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@section metaShared {
  <meta property="og:locale" content="en_US">
  <meta property="og:description" content="@ViewBag.Description">
  <meta property="og:title" content="@ViewBag.Title">
  <meta property="og:url" content="@Context.Request.Host@Context.Request.Path">
  <meta property="og:site_name" content="KhoaHocCongNghe">
  <meta name="twitter:card" content="summary">
  <meta name="twitter:site" content="@(" @")hoi">
  <meta name="twitter:domain" content="PioneerCode">
  @RenderSection("metaPage", false)
}

@section headEnd {
  <link href="/app.css" rel="stylesheet" asp-append-version="true" />
}

@section nav {
  <nav class="nav-main" id="nav-main">
    <div class="row">
      <div class="large-12 columns">
        <input type="hidden" class="nav-main-show" />
        <div class="title-bar clearfix">
          <div class="title-bar-title float-left">
              <a href="/" class="title" title="Khoa học công nghệ">Khoa học công nghệ mới </a>
          </div>
          <button class="fa fa-bars fa-lg float-right" type="button" onclick="hamburgerClick()"></button>
        </div>
        <div class="top-bar hide-for-small-only">
          <div class="top-bar-left ">
            <ul class="menu">
              <li class="menu-text">
                <a href="/" class="title" title="Khoa học công nghệ">Khoa học công nghệ mới </a>
              </li>
            </ul>
          </div>
          <div class="top-bar-right">
            <ul class="dropdown menu">
              <li class="@(ViewBag.Selected == "blog" ? "selected" : "")">
                <a href="/blog" title="Blog">TIN TỨC</a>
              </li>
              <li class="@(ViewBag.Selected == "about" ? "selected" : "")">
                <a href="/about" title="About">THÔNG TIN</a>
              </li>
              <li class="@(ViewBag.Selected == "search" ? "selected" : "")">
                <a href="/search" title="Search">TÌM KIẾM</a>
              </li>
              <li class="@(ViewBag.Selected == "contact" ? "selected" : "")">
                <a href="/contact" class="margin-zero" title="Contact">LIÊN HỆ</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div id="mobile-nav" class="mobile-nav hide">
      <ul class="dropdown menu">
        <li class="@(ViewBag.Selected == "blog" ? "selected" : "")">
          <a href="/blog" title="Blog">TIN TỨC</a>
        </li>
        <li class="@(ViewBag.Selected == "about" ? "selected" : "")">
          <a href="/about" title="About">THÔNG TIN</a>
        </li>
        <li class="@(ViewBag.Selected == "search" ? "selected" : "")">
          <a href="/search" title="Search">TÌM KIẾM</a>
        </li>
        <li class="@(ViewBag.Selected == "contact" ? "selected" : "")">
          <a href="/contact" class="margin-zero" title="Contact">LIÊN HỆ</a>
        </li>
      </ul>
    </div>
  </nav>
}

<section class="body-content">
  @RenderBody()
</section>

@section bodyEnd {
